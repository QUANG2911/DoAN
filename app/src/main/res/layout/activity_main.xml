<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="964dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/vien"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_person"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/person"
            android:onClick="PersonClick"></ImageButton>

        <ImageButton
            android:id="@+id/btn_Lich"
            android:layout_width="96dp"
            android:layout_height="85dp"
            android:layout_margin="1dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/lich"></ImageButton>

        <ImageButton
            android:id="@+id/btn_note"
            android:layout_width="96dp"
            android:layout_height="73dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/note"
            android:onClick="CongViecClick"></ImageButton>

        <ImageButton
            android:id="@+id/btn_ThongKe"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/thongke"></ImageButton>

        <ImageButton
            android:id="@+id/btn_out"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginTop="190dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/out"></ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/Cv_lich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"></DatePicker>
    </LinearLayout>
</LinearLayout>